.SUFFIXES:  .c .o

SHELL     = /bin/sh
ARCH      = @host_cpu@
VERSION   = 1.1
DATE      = `date`
CC        = @CC@ 
AR        = ar
LD        = @CC@
GZIP      = gzip
TAR       = gtar
CFLAGS    = @CFLAGS@ 
CPPFLAGS  = @CPPFLAGS@
DEFS      = -DVERSION="\"$(VERSION)"\" -DDATE="\"$(DATE)"\"
LIBS      = @LIBS@
LDFLAGS   = 
ARFLAGS   = cr

prefix          = @prefix@
datarootdir 	= @datarootdir@
srcdir          = @srcdir@
top_srcdir      = @top_srcdir@
exec_prefix     = @exec_prefix@
includedir      = @includedir@
mandir          = @mandir@
distdir         = @distdir@
libexecdir      = @libexecdir@


DISTFILES   = README AUTHORS LICENSE ChangeLog INSTALL TODO configure configure.in install-sh Makefile.in config.sub config.guess
DISTSUBDIRS = src man



all: 
	(cd src; $(MAKE) all)

install: ALWAYS
	(cd src; $(MAKE) install); \
        (cd man; $(MAKE) install)

uninstall: ALWAYS
	(cd src; $(MAKE) uninstall); \
        (cd man; $(MAKE) uninstall)

ALWAYS:


dist: distdir
	(cd $(distdir)/..; $(TAR)  cf $(distdir).tar `basename $(distdir)`)
	$(GZIP)  $(distdir).tar
	rm -rf $(distdir)

distdir: $(DISTFILES)
	rm -rf $(distdir);
	mkdir $(distdir);
	@for file in $(DISTFILES); do\
	   cp $(srcdir)/$$file $(distdir); \
        done;
	@for subdir in $(DISTSUBDIRS); do\
           mkdir $(distdir)/$$subdir; \
           (cd $$subdir; \
           $(MAKE) top_distdir=$(distdir) distdir=$(distdir)/$$subdir distdir;) \
        done;
clean:
	rm -f config.cache config.log config.status;\
	cd src; $(MAKE) clean

